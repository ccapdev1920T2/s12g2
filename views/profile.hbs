<div id = "reportscreen">
	<div id = "reportcontent">
		<button id = "close">X</button>
		<h1 style = "text-align: center; margin-left: 80px">REPORT USER</h1>
		<br>
		<div id = "report">
			<form name = "report">
				<h3 style = "text-align: center; color: black">REASON/S</h3>
				<div class = "reportreasons" id = "rr1">
					<div>
					<input type = "checkbox" class = "reportchecks" id = "offensive">
					<label for = "offensive" style = "color: black">Offensive/Abusive Behavior</label>
					</div>
					<div>
					<input type = "checkbox" class = "reportchecks" id = "flaking">
					<label for = "flaking" style = "color: black">Flaking</label>
					</div>
					<div>
					<input type = "checkbox" class = "reportchecks" id = "defamation">
					<label for = "defamation" style = "color: black">Defamation</label>
					</div>
					
				</div>
				<div class = "reportreasons" id = "rr2">
					<div>
					<input type = "checkbox" class = "reportchecks" id = "slander">
					<label for = "slander" style = "color: black">Slander</label>
					</div>
					<div>
					<input type = "checkbox" class = "reportchecks" id = "spam">
					<label for = "spam" style = "color: black">Spam</label>
					</div>
				</div>

				<br>
				<h3 style = "text-align: center; color: black">COMPLAINT</h3>
				<div id = "reportcomplaint">
					<textarea form = "report" id = "textcomplaint" placeholder = "Ex. The user stopped replying after I paid..." style = "font-size:  15px"></textarea>

				</div>
				<p class = "errormessage" id = "reporterrormessage"></p>
				<div id = "submitbutton">
					<button type = "button" id = "profilesubmit">SUBMIT</button>
				</div>
			
			</form>
		</div>
	</div>
</div>

<div id = "wrapper1">
	<!-- HEADER -->
	{{> userheader ua = useravatar}}

	<!-- PROFILE -->
	<div id = "profile">

		<!-- PROFILE DETAILS -->
		<div id = "details">
			<div id = "detailscontent">
				<div id = "dpdiv">
					<img id = "dp" src = "{{avatar}}">
				</div>

				<div id = "name">
					<p id = "profileusername">{{username}}</p>
				</div>

				<div id = "review">
					{{#each (loop checkedstars)}}
						<span class="fa fa-star checked"></span>
					{{/each}}
					{{#each (loop uncheckedstars)}}
						<span class="fa fa-star"></span>
					{{/each}}
				</div>

				<div id = "bio">
					<p id = "biotext">{{bio}}</p>
				</div>

				<div id = "socialmedia">
					{{#if hasfb}}
						<a href = "http://www.facebook.com/{{facebook}}"><img class = "icon" id = "fb"src = "img\facebook.png"></a>
					{{/if}}

					{{#if hastw}}
						<a href = "http://www.twitter.com/{{twitter}}"><img class = "icon" id = "tw"src = "img\twitter.png"></a>
					{{/if}}

					{{#if hasig}}
						<a href = "http://www.instagram.com/{{instagram}}"><img class = "icon" id = "ig"src = "img\instagram.png"></a>
					{{/if}}
				</div>

				<div id = "contactdetails">
					<p>Contact Number: {{number}}</p>
				</div>

				
				<a id = "reviews" href= "reviews">
					USER REVIEWS
				</a>

				<a id = "reportbutton" href = "#">
					REPORT USER
				</a>
			</div>
		</div>

		<div id = "posts">
			<!-- POSTS -->
			{{#each post}}
				<div class="post">
					<div class="postheader">
						<a href="view-post" class = "posttitle">
							{{title}}
						</a>
						<div class = "ffbutton">â™¡</div>
					</div>

					<div class="posttags">
						{{#each tag}}
							<a href="{{taglink}}" class="tag">{{tagname}}</a>
						{{/each}}
					</div>

					<div class="postedby">
						<img class="avatar" src="{{posteravatar}}">
						<a href="profile" class="username">{{postername}}</a>

						<div class="stealprice">
							P{{stealprice}}
						</div>
						<div class="currentprice">
							P{{currentprice}}
						</div>
					</div>

					<img class="itemimage" src="{{itemimg}}">
					
					<div class="dateposted">
						{{date}} | {{time}}
					</div>
				</div>
			{{/each}}

		</div>
	</div>

	<div id = "iconattribute">
		Icons made by
		<a href="https://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a> 
		from
		<a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a>
	</div>
	

</div>	

<script type = "text/javascript">

	$("#reportbutton").click(function() 
	{
		$("#textcomplaint").val("");
		var checks = $(".reportchecks:checked");
		var x;
		
		for(x = 0; x < checks.length; x++)
			checks[x].checked = false;

		$("#reportscreen").css("display", "block");
	});

	$("#close").click(function() 
	{
		$("#errormessage").text("");
		$("#reportscreen").css("display", "none");
	});

	$("#profilesubmit").click(function() 
	{
		var checks = $(".reportchecks:checked");
		
		if(checks.length > 0 && !($("#textcomplaint").val().trim() == ""))
		{
			$("#errormessage").text("");
			$("#reportscreen").css("display", "none");
		}
		else
		{
			$("#reportscreen").css("display", "block");

			if(checks.length == 0)
				$("#errormessage").text("Please check at least one of the boxes.");
			else if($("#textcomplaint").val().trim() == "")
				$("#errormessage").text("Please write your complaint.");
			
		}

		
	});

</script>