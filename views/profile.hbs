<!DOCTYPE html>

<html>

    <head> 
        <title>bids++</title>
		<meta charset="UTF-8">
		<link rel="stylesheet" href="css\style.css">

		<link href="https://fonts.googleapis.com/css?family=Josefin+Sans&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		
    </head>
    <body>

    		<div id = "reportscreen">
    			<div id = "reportcontent">
    				<button id = "close">X</button>
    				<h1 style = "text-align: center; margin-left: 80px">REPORT USER</h1>
    				<br>
    				<div id = "report">
    					<form name = "report">
    						<h3 style = "text-align: center; color: black">REASON/S</h3>
    						<div class = "reportreasons" id = "rr1">
    							<div>
    							<input type = "checkbox" id = "offensive">
	    						<label for = "offensive" style = "color: black">Offensive/Abusive Behavior</label>
	    						</div>
	    						<div>
	    						<input type = "checkbox" id = "flaking">
	    						<label for = "flaking" style = "color: black">Flaking</label>
	    						</div>
	    						<div>
	    						<input type = "checkbox" id = "defamation">
	    						<label for = "defamation" style = "color: black">Defamation</label>
	    						</div>
	    						
    						</div>
    						<div class = "reportreasons" id = "rr2">
	    						<div>
    							<input type = "checkbox" id = "slander">
	    						<label for = "slander" style = "color: black">Slander</label>
	    						</div>
	    						<div>
	    						<input type = "checkbox" id = "spam">
	    						<label for = "spam" style = "color: black">Spam</label>
	    						</div>
    						</div>

    						<br>
    						<h3 style = "text-align: center; color: black">COMPLAINT</h3>
    						<div id = "reportcomplaint">
    							<textarea form = "report" id = "textcomplaint" placeholder = "Ex. The user stopped replying after I paid..." style = "font-size:  15px"></textarea>

    						</div>
    						<br>
    						<div id = "submitbutton">
    							<button id = "profilesubmit">SUBMIT</button>
    						</div>
    					
    					</form>
    				</div>
    			</div>
    		</div>

		<div id = "wrapper1">
			<!-- HEADER -->
            {{> userheader ua = useravatar}}

			<!-- PROFILE -->
			<div id = "profile">

				<!-- PROFILE DETAILS -->
		    	<div id = "details">
		    		<div id = "detailscontent">
		    			<div id = "dpdiv">
			    			<img id = "dp"src = "{{dp}}">
			    		</div>

			    		<div id = "name">
			    			<p id = "profileusername">{{profileusername}}</p>
			    		</div>

			    		<div id = "review">
			    			{{#each checkedstars}}
								<span class="fa fa-star checked"></span>
							{{/each}}
							{{#each uncheckedstars}}
								<span class="fa fa-star"></span>
							{{/each}}
			    		</div>

			    		<div id = "bio">
			    			<p id = "biotext">{{bio}}</p>
			    		</div>

			    		<div id = "socialmedia">
							{{#if hasfb}}
								<a href = "{{fb}}"><img class = "icon" id = "fb"src = "img\facebook.png"></a>
							{{/if}}

							{{#if hastw}}
			    				<a href = "{{tw}}"><img class = "icon" id = "tw"src = "img\twitter.png"></a>
							{{/if}}

							{{#if hasig}}
								<a href = "{{ig}}"><img class = "icon" id = "ig"src = "img\instagram.png"></a>
							{{/if}}
			    		</div>

			    		<div id = "contactdetails">
			    			<p>Contact Number: {{contactdetails}}</p>
			    		</div>

			    		
			    		<a id = "reviews" href= "reviews.hbs">
				    		USER REVIEWS
			    		</a>

			    		<a id = "reportbutton" href = "#" onclick="actionModal();">
				    		REPORT USER
			    		</a>
			    	</div>
			    </div>

		    	<div id = "posts">
		    		<!-- POSTS -->
					{{#each post}}
						<div class="post">
							<div class="postheader">
								<a href="post.hbs" class = "posttitle">
									{{posttitle}}
								</a>
								<div class = "ffbutton">â™¡</div>
							</div>

							<div class="posttags">
								<a href="" class="tag">{{tag}}</a>
							</div>

							<div class="postedby">
								<img class="avatar" src="{{avatar}}">
								<a href="profile.hbs" class="username">{{username}}</a>

								<div class="stealprice">
									{{stealprice}}
								</div>
								<div class="currentprice">
									{{currentprice}}
								</div>
							</div>

							<img class="itemimage" src="{{itemimage}}">
							
							<div class="dateposted">
								{{dateposted}} | {{timeposted}}
							</div>
						</div>
					{{/each}}

		    	</div>
			</div>

			<div id = "iconattribute">
				Icons made by
				<a href="https://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a> 
				from
				<a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a>
			</div>
			

		</div>	
	
		<script type = "text/javascript">

			document.getElementById("reportbutton").onclick = function() {
				document.getElementById("reportscreen").style.display = "block";
			}

			document.getElementById("close").onclick = function()
			{
				document.getElementById("reportscreen").style.display = "none";
			}

			document.getElementById("profilesubmit").onclick = function()
			{
				document.getElementById("reportscreen").style.display = "none";
			}

		</script>

    </body>

</html>