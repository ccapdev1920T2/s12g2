<div id = "wrapper1">

    {{> userheader username = username}}

    <!-- EDIT POSTS -->
    <p class="title">edit post</p>
    <div class="post">
            {{#postdetails}}
            <form action="/posts/{{_id}}" class="createpost" action="#" id="createpost" name = "edit" method = "POST">
                <div class="postdetails">
                    <label for="description">Description</label><br>
                    <textarea name="description" form="createpost">{{description}}</textarea><br>
                    <label for="meetup">Meet-up Details</label><br>
                    <input type="text" id="meetup" name="meetup" value="{{details}}"><br>
                    <button type="submit" form="createpost" value="Submit" onclick = "edit.submit()">Submit</button>
                </div>

            </form>
            {{/postdetails}}
        
    </div>

</div>
