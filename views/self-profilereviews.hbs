<div id = "wrapper1">
	<!-- HEADER -->
	{{> userheader ua = useravatar}}

	<!-- PROFILE -->
	<div id = "profile">

		<!-- PROFILE DETAILS -->
		<div id = "details">
			<div id = "detailscontent">
				<div id = "dpdiv">
					<img id = "dp"src = "{{avatar}}">
				</div>

				<div id = "name">
					<p id = "profileusername">{{username}}</p>
				</div>

				<div id = "review">
					{{#each (loop checkedstars)}}
						<span class="fa fa-star checked"></span>
					{{/each}}
					{{#each (loop uncheckedstars)}}
						<span class="fa fa-star"></span>
					{{/each}}
				</div>

				<div id = "bio">
					<p id = "biotext">{{bio}}</p>
				</div>

				<div id = "socialmedia">
					{{#if hasfb}}
						<a href = "http://www.facebook.com/{{facebook}}"><img class = "icon" id = "fb"src = "/img/facebook.png"></a>
					{{/if}}

					{{#if hastw}}
						<a href = "http://www.twitter.com/{{twitter}}"><img class = "icon" id = "tw"src = "/img/twitter.png"></a>
					{{/if}}

					{{#if hasig}}
						<a href = "http://www.instagram.com/{{instagram}}"><img class = "icon" id = "ig"src = "/img/instagram.png"></a>
					{{/if}}
				</div>

				<div id = "contactdetails">
					<p>Contact Number: {{number}}</p>
				</div>

				
				<a id = "reviews" href= "/user/{{username}}">
					POSTS
				</a>

				<a id = "reportbutton" href = "/editprofile" >
					EDIT PROFILE
				</a>
			</div>
		</div>

		<div id = "posts">

			<!-- REVIEWS -->
			{{#each review}}
				<div class="reviews">
					<div id = "reviewstars">
						{{#each (loop checkedstars)}}
							<span class="fa fa-star checked"></span>
						{{/each}}
						{{#each (loop uncheckedstars)}}
							<span class="fa fa-star"></span>
						{{/each}}
					</div>
					<div class="reviewer">
							<img class="avatar" src="{{avatar}}">
							<a href="profile" class="username">{{username}}</a>
					
					</div>
					<p class = "reviewdesc">
						{{text}}
					</p>
				</div>
			{{/each}}

		</div>

	</div>	

	<div id = "iconattribute">
		Icons made by
		<a href="https://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a> 
		from
		<a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a>
	</div>

</div>


<script type = "text/javascript">

	$("#reportbutton").click(function() 
	{
		$("#textcomplaint").val("");
		var checks = $(".reportchecks:checked");
		var x;
		
		for(x = 0; x < checks.length; x++)
			checks[x].checked = false;

		$("#reportscreen").css("display", "block");
	});

	$("#close").click(function() 
	{
		$("#errormessage").text("");
		$("#reportscreen").css("display", "none");
	});

	$("#profilesubmit").click(function() 
	{
		var checks = $(".reportchecks:checked");
		
		if(checks.length > 0 && !($("#textcomplaint").val().trim() == ""))
		{
			$("#reporterrormessage").text("");
			$("#reportscreen").css("display", "none");
		}
		else
		{
			$("#reportscreen").css("display", "block");

			if(checks.length == 0)
				$("#reporterrormessage").text("Please check at least one of the boxes.");
			else if($("#textcomplaint").val().trim() == "")
				$("#reporterrormessage").text("Please write your complaint.");

		}

	});

	$("#submitreview").click(function()
	{
		
		if(!($("#stars option:selected").val() == 'none') && !($("#reviewbox").val().trim() == ""))
		{
			$("#reviewerrormessage").text("");
			$("#reviewbox").val("");
			$("#stars").val('0');
			alert("Your review has been submitted.");
		}
		else
		{
			if($("#stars option:selected").val() == 'none')
				$("#reviewerrormessage").text("Please choose how many stars you are rating the user.");
			else
				$("#reviewerrormessage").text("Please write your review before submitting.");
		}

	});

</script>