<div id = "reportscreen">
	<div id = "reportcontent">
		<button id = "close">X</button>
		<h1 style = "text-align: center; margin-left: 80px; margin-bottom: 0px">FILTER AND SORT</h1>
		<br>
		<div id = "filtersortsubmit">
				<div id = "filtersort">
					<div id = "filtertitleoptions">
						<h3 style = "text-align: center; color: black;">FILTER TAGS</h3>
						<div id = "filter" style="margin-left: 30px;">
							
								<div class = "filteroptions">
									<form method = "get" name = "sortfilter">
									<div>
										<input type = "radio" id = "book" name = "filter" value = "Book">
										<label for = "book" style = "color: black">Book</label>
									</div>

									<div>
										<input type = "radio" id = "forpet" name = "filter" value = "For Pet">
										<label for = "forpet" style = "color: black">For Pet</label>
									</div>

									<div>
										<input type = "radio" id = "womens" name = "filter" value = "Women's">
										<label for = "womens" style = "color: black">Women's</label>
									</div>

									<div>
										<input type = "radio" id = "mens" name = "filter" value = "Men's">
										<label for = "mens" style = "color: black">Men's</label>
									</div>

									<div>
										<input type = "radio" id = "childrens" name = "filter" value = "Children's">
										<label for = "childrens" style = "color: black">Children's</label>
									</div>

									<div>
										<input type = "radio" id = "shoes" name = "filter" value = "Shoes">
										<label for = "shoes" style = "color: black">Shoes</label>
									</div>
								</div>

								<div class = "filteroptions">
									<div>
										<input type = "radio" id = "stationery" name = "filter" value = "Stationery">
										<label for = "stationery" style = "color: black">Stationery</label>
									</div>

									<div>
										<input type = "radio" id = "food" name = "filter" value = "Food">
										<label for = "food" style = "color: black">Food</label>
									</div>

									<div>
										<input type = "radio" id = "collectible" name = "filter" value = "Collectible">
										<label for = "collectible" style = "color: black">Collectible</label>
									</div>

									<div>
										<input type = "radio" id = "accessory" name = "filter" value = "Accessory">
										<label for = "accessory" style = "color: black">Accessory</label>
									</div>

									<div>
										<input type = "radio" id = "technology" name = "filter" value = "Technology">
										<label for = "technology" style = "color: black">Technology</label>
									</div>
								</div>
						</div>
					</div>

					<div id = "sorttitleoptions">
						<h3 style = "text-align: center; color: black;">SORT BY</h3>
						<div id = "sort">
								<div class = "sortoptions">
									<div class = "sortoption">
										<input type = "radio" name = "sort" value = "dateasc">
										<label for = "date" style = "color: black">Date Posted (Ascending)</label>
									</div>

									<div class = "sortoption">
										<input type = "radio" name = "sort" value = "datedes">
										<label for = "date" style = "color: black">Date Posted (Descending)</label>
									</div>

									<div class = "sortoption">
										<input type = "radio" name = "sort" value = "stealpricelth">
										<label for = "stealprice" style = "color: black">Steal Price Low to High</label>
									</div>

									<div class = "sortoption">
										<input type = "radio" name = "sort" value = "stealpricehtl">
										<label for = "stealprice" style = "color: black">Steal Price High to Low</label>
									</div>

									<div class = "sortoption">
										<input type = "radio" name = "sort" value = "currentpricelth">
										<label for = "currentprice" style = "color: black">Current Price Low to High</label>
									</div>

									<div class = "sortoption">
										<input type = "radio" name = "sort" value = "currentpricehtl">
										<label for = "currentprice" style = "color: black">Current Price High to Low</label>
									</div>

									<div class = "sortoption">
										<input type = "radio" name = "sort" value = "titleaz">
										<label for = "title" style = "color: black">Title (A-Z)</label>
									</div>

									<div class = "sortoption">
										<input type = "radio" name = "sort" value = "titleza">
										<label for = "title" style = "color: black">Title (Z-A)</label>
									</div>

								</div>

							</form>
						</div>
					</div>
				</div>

				
				<div id = "submitbutton">
					<button id = "profilesubmit" onclick = "sortfilter.submit()">SUBMIT</button>
				</div>
			
		</div>
	</div>
</div>

<div id = "wrapper1">
	{{> userheader username = username}}

	<!-- SEARCHBAR-->
	<div id="searchbar">
			<form name="searchform" action="search" method="GET">
				<input type="text" placeholder="search" id="search" name = "search">
				<span class ="sbbutton" id="searchbutton" onclick ="searchform.submit()">search</span>
				<span class ="sbbutton" id="filterbutton">filter</span>
			</form>
	</div>
	<!-- POSTS -->

	{{#each post}}

			<div class="post">
				<div class="postheader">
					<a href="/posts/{{_id}}" class = "posttitle">
						{{title}}
					</a>
					{{#ifCond postername ../username}}
					<a href="/user/{{postername}}/{{_id}}/delete/2" name = "delete" class ="sbbutton" id="filterbutton" onclick="return confirm('Are you sure you want to delete this post?')">X</a>
					<a href="/posts/{{_id}}/edit" class ="sbbutton" id="searchbutton">edit</a>
					{{/ifCond}}
				</div>

				<div class="posttags">
					<a href="/tagged/{{tagname}}" class="tag">{{tagname}}</a>
				</div>

				<div class="postedby">
					<img class="avatar" src="{{posteravatar}}">
					<a href="/user/{{postername}}" class="username">{{postername}}</a>
				
					<div class="stealprice">
						P{{stealprice}}
					</div>
					<div class="currentprice">
						P{{currentprice}}
					</div>

					
				</div>

				<img class="itemimage" src="{{itemimg}}">
				
				<div class="dateposted">
					{{date}} | {{time}}
				</div>
			</div>
		{{/each}}

</div>



<script type="text/javascript">

	$("#filterbutton").click(function() 
	{
		$("#reportscreen").css("display", "block");
	});

	$("#close").click(function() 
	{
		$("#reportscreen").css("display", "none");
	});

	$("#profilesubmit").click(function() 
	{
		$("#reportscreen").css("display", "none");
	});


</script>