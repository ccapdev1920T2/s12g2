									<div>
										<input type = "checkbox" id = "bottom">
										<label for = "bottom" style = "color: black">Bottom</label>
									</div>

									<div>
										<input type = "checkbox" id = "mens">
										<label for = "mens" style = "color: black">Men's</label>
									</div>

									<div>
										<input type = "checkbox" id = "stationery">
										<label for = "stationery" style = "color: black">Stationery</label>
									</div>
