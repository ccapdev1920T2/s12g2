<div id = "wrapper1">
	<!-- HEADER -->
	{{> adminheader}}

	<!-- PROFILE -->
	<div id = "profile">

		<!-- PROFILE DETAILS -->
		<div id = "details">
			<div id = "detailscontent">
				<div id = "dpdiv">
					<img id = "dp"src = "{{dp}}">
				</div>

				<div id = "name">
					<p id = "profileusername">{{profileusername}}</p>
				</div>

				<div id = "review">
					{{#each checkedstars}}
						<span class="fa fa-star checked"></span>
					{{/each}}
					{{#each uncheckedstars}}
						<span class="fa fa-star"></span>
					{{/each}}
				</div>

				<div id = "bio">
					<p id = "biotext">{{bio}}</p>
				</div>

				<div id = "socialmedia">
					{{#if hasfb}}
						<a href = "{{fb}}"><img class = "icon" id = "fb"src = "img\facebook.png"></a>
					{{/if}}

					{{#if hastw}}
						<a href = "{{tw}}"><img class = "icon" id = "tw"src = "img\twitter.png"></a>
					{{/if}}

					{{#if hasig}}
						<a href = "{{ig}}"><img class = "icon" id = "ig"src = "img\instagram.png"></a>
					{{/if}}
				</div>

				<div id = "contactdetails">
					<p>Contact Number: {{contactdetails}}</p>
				</div>

				
				<a id = "reviews" href= "reviews">
					USER REVIEWS
				</a>

			</div>
		</div>

		<div id = "posts">
			<!-- POSTS -->
			{{#each post}}
				<div class="post">
					<div class="postheader">
						<a href="view-post" class = "posttitle">
							{{title}}
						</a>
						<div class = "ffbutton">â™¡</div>
					</div>

					<div class="posttags">
						{{#each tag}}
							<span class="tag">{{tagname}}</span>
						{{/each}}
					</div>

					<div class="postedby">
						<img class="avatar" src="{{posteravatar}}">
						<a href="profile" class="username">{{postername}}</a>

						<div class="adminprice stealprice">
							{{stealprice}}
						</div>
						<div class="adminprice currentprice">
							{{currentprice}}
						</div>
					</div>

					<img class="itemimage" src="{{itemimg}}">
					
					<div class="dateposted">
						{{date}} | {{time}}
					</div>
				</div>
			{{/each}}

		</div>
	</div>

	<div id = "iconattribute">
		Icons made by
		<a href="https://www.flaticon.com/authors/freepik" title="Freepik">Freepik</a> 
		from
		<a href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a>
	</div>
	

</div>	

<script type = "text/javascript">

	document.getElementById("reportbutton").onclick = function() {
		document.getElementById("reportscreen").style.display = "block";
	}

	document.getElementById("close").onclick = function()
	{
		document.getElementById("reportscreen").style.display = "none";
	}

	document.getElementById("profilesubmit").onclick = function()
	{
		document.getElementById("reportscreen").style.display = "none";
	}

</script>